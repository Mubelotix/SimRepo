{
    "private": true,
    "scripts": {
        "build": "NODE_NO_WARNINGS=1 parcel build && cp static/* distribution/",
        "build:chrome": "NODE_NO_WARNINGS=1 parcel build --no-optimize --no-content-hash --no-source-maps --no-scope-hoist --no-cache --detailed-report 0 && cp static/* distribution/",
        "lint": "run-p lint:*",
        "lint-fix": "run-p 'lint:* -- --fix'",
        "lint:css": "stylelint source/**/*.css",
        "lint:js": "eslint source/**/*.js",
        "test": "run-p lint:* build",
        "watch": "NODE_NO_WARNINGS=1 parcel watch --no-hmr"
    },
    "browserslist": [
        "last 1 Chrome version",
        "last 1 Firefox version"
    ],
    "stylelint": {
        "extends": [
            "stylelint-config-standard"
        ],
        "rules": {
            "selector-class-pattern": null,
            "custom-property-pattern": null
        }
    },
    "dependencies": {
        "@primer/octicons": "^19.15.2",
        "gh-lang-colors": "^0.1.11",
        "webext-base-css": "^2.0.1",
        "webext-options-sync": "^4.2.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.28.0",
        "@parcel/config-webextension": "^2.15.2",
        "@parcel/resolver-default": "^2.15.2",
        "eslint": "^9.28.0",
        "globals": "^16.2.0",
        "npm-run-all2": "^7.0.1",
        "parcel": "^2.15.2",
        "stylelint": "^16.6.1",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-standard": "^38.0.0"
    },
    "@parcel/resolver-default": {
        "packageExports": true
    },
    "targets": {
        "default": {
            "source": "source/manifest.json",
            "distDir": "./distribution"
        }
    },
    "webExt": {
        "sourceDir": "distribution",
        "run": {
            "startUrl": [
                "https://github.com/fregante/browser-extension-template"
            ]
        }
    }
}
